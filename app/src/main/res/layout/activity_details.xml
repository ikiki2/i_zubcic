<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/detailsSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTrainingDetails"
            android:layout_centerHorizontal="true"
            android:background="@color/blue"
            android:text="Save"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/toolbar_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backDetails"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/trainingDetailsTitle"
                android:textColor="@color/main_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/deleteDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="40dp"
                android:text="Delete"
                android:textColor="@color/main_blue"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/userWeightTrainingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTrainingDetails"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="User Weight: 120kg" />

        <TextView
            android:id="@+id/seriesTrainingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userWeightTrainingDetails"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="12 Series" />

        <TextView
            android:id="@+id/weightTrainingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seriesTrainingDetails"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="Weight: 120 kg" />

        <TextView
            android:id="@+id/dateTrainingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weightTrainingDetails"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="Date: 22.08.2022." />


        <TextView
            android:id="@+id/nothingImportant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTrainingDetails"
            android:layout_marginStart="20dp"
            android:text="Description:"
            android:textColor="@color/main_blue"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/descriptionTrainingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nothingImportant"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="19sp"
            tools:text="Neki description koji nema veze" />


        <EditText
            android:id="@+id/titleTrainingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Bench Press" />

    </RelativeLayout>

</ScrollView>