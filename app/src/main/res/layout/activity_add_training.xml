<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbarAdd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/toolbar_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backAdd"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/add_training_title"
                android:textColor="@color/main_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="40dp"
                android:text="@string/add_training_add"
                android:textColor="@color/main_blue"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/nothingImportant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weightTrainingAdded"
            android:layout_marginStart="20dp"
            android:text="Description:"
            android:textColor="@color/main_blue"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userWeightTrainingAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTrainingAdd"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:hint="Insert your weight..."
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/seriesTrainingAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userWeightTrainingAdd"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:hint="Insert num of series..."
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weightTrainingAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seriesTrainingAdd"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:hint="Insert weight you worked with..."
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleTrainingAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarAdd"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:hint="Insert title..."
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionTrainingAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nothingImportant"
            android:layout_margin="20dp"
            android:hint="Insert description of the training..."
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="19sp" />

    </RelativeLayout>
</ScrollView>